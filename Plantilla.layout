Style Revista
  Category         DatosLibro
  Margin           First_Dynamic
  LatexType        Command
  NextNoIndent     0
  ParIndent        MM
  Align            Left
  LabelType        Static
  LabelSep         xx
  ParIndent        MM
  ParSkip          1
  TopSep           0.5
  BottomSep        0.5
  ParSep           1

  LatexName        Revista
  LabelString      "Nombre de la Revista "
  
  Argument 1
	  Mandatory	1
	  LabelString	"Revista"
	  Tooltip	"Escriba el nombre de la Revista"
  EndArgument
  
  Argument 2
	  Mandatory	1
	  LabelString	"Volumen"
	  Tooltip	"Escriba el volumen"
  EndArgument
  
  Argument 3
	  Mandatory	1
	  LabelString	"Numero"
	  Tooltip	"Escriba el numero de publicacion"
  EndArgument
  
  Argument 4
	  Mandatory	1
	  LabelString	"ISSN"
	  Tooltip	"Ingrese el ISSN de la revista"
  EndArgument

  Font       
	Family         Roman
	Size		   large
  EndFont

  LabelFont 
    Family         Roman
	Series         Bold
    Color          red
	Size		   large
  EndFont
End

#generar la portada
Style GenerarPortada
	Category              Generar
	KeepEmpty             1
	Margin                Dynamic
	LatexType             Command
	LatexName             GenerarPortada
	ParIndent             MM
	ParSkip               1
	TopSep                2
	BottomSep             2
	ParSep                1
	Align                 Center
	LabelType             Static
	LabelString           "--- Generar la Portada ---"
	LabelFont
	  Family              Roman
	  Series              Medium
	  Size                huge
	  Color               Blue
	EndFont
