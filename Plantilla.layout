Format 35

Input stdfloats.inc
Input stdcounters.inc
Input stdinsets.inc
Input stdlists.inc
Input stdstruct.inc
Input stdlayouts.inc
Input stdciteformats.inc

Columns                 1
Sides                   1
SecNumDepth             2
TocDepth                2
DefaultStyle            Standard

DefaultFont
	Family                Roman
	Series                Medium
	Shape                 Up
	Size                  Normal
	Color                 None
EndFont

Counter section
	PrettyFormat         "Section ##"
End


Style Standard
	Category              MainText
	Margin                Static
	LatexType             Paragraph
	LatexName             dummy
	ParIndent             MM
	ParSkip               0.4
	Align                 Block
	AlignPossible         Block, Left, Right, Center
	LabelType             No_Label
	
	HTMLStyle
		div.standard {
			margin-bottom: 2ex;
		}
	EndHTMLStyle
End

Style Chapter
	Margin                First_Dynamic
	Category              Section
	LabelString           "Capitulo \thechapter : "
	LabelStringAppendix   "Appendix \thechapter:  "
	LabelType             Counter
	LabelCounter          chapter
	TocLevel              1
	LatexType             Command
	LatexName             chapter
	NeedProtect           1
	NextNoIndent          1
	ParSkip               0.4
	TopSep                4
	BottomSep             0.8
	ParSep                2.8
	LabelSep              xx
	Align                 Block
	OptionalArgs          1
	CommandDepth          0
	
	Font
	  Series              Bold
	  Size                huge
	EndFont
	
	LabelFont 
    Color               blue
	Series              Bold
	Size                huge
	EndFont
	
	HTMLTag               h2
End

Style Chapter*
	CopyStyle			  Chapter
	Margin                Static
	Category              Section*
	LabelType             No_Label
	LatexName             chapter*
	OptionalArgs          0
End

